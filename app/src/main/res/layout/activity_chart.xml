<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="760dp">
<LinearLayout
    android:layout_width="360dp"
    android:layout_height="760dp"
    android:orientation="vertical"
    tools:context=".Chart_Activity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Base">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Person Image -->
            <ImageView
                android:id="@+id/mypageBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="#ffffff"
                android:src="@drawable/person" />

            <!-- Chart Text -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차트"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="60sp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="145dp"
            android:layout_height="44dp"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:text="@string/_2023_5"
            android:textColor="#232732"
            android:textSize="20sp" />

        <View
            android:layout_width="111dp"
            android:layout_height="0dp"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/but"
            android:text="추천모델"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="173dp"
        android:orientation="horizontal">
        <com.example.self_life.CircleProgressBarView2
            android:id="@+id/circleProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />
        <com.example.self_life.CircleProgressBarView
            android:id="@+id/circleProgressBar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="173dp"
        android:orientation="horizontal">
        <com.example.self_life.CircleProgressBarView3
            android:id="@+id/circleProgressBar3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:textSize="16sp"
            android:textColor="#232732"
            android:lineHeight="30sp"
            android:text="계획 기반 운용 현황"/>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:textSize="16sp"
            android:textColor="#232732"
            android:lineHeight="30sp"
            android:text="총 현황"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/rec">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="14sp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="2dp"
            android:textColor="#232732"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="지난 달 대비 지출량" />




    </LinearLayout>
    


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/rec">

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="123dp"
            android:textColor="#232732"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="14sp"
            android:text="주간 레포트"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:background="@drawable/rec"
            android:text="지출·수입 내역 변경하기"
            android:textSize="16sp"
            android:textColor="#ed6c59">
        </Button>

    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plubottonback" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_gravity="bottom">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_bottom_navigation"
            app:itemIconTint="#000000"
            app:itemTextColor="#000000"
            app:itemIconSize="26dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu">


        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plusbotton" />
    <FrameLayout
        android:id="@+id/chartPlus"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plusbottnreal" >
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/baseline_add_24_1"
            android:layout_marginBottom="7dp" >
        </FrameLayout>

    </FrameLayout>
</FrameLayout>
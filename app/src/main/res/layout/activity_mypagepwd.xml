<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="760dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="760dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="#ed6c59">

            <TextView
                android:id="@+id/FindIDTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="60sp"
                android:text="마이페이지"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/MypagePwdFl"
            android:layout_width="360dp"
            android:layout_height="216dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/eotrmf"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="26dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#ed6c59"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="62sp"
                    android:text="현재 비밀번호 :"
                    android:layout_gravity="left|center"/>

                <EditText
                    android:id="@+id/PpwdEt"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/txtcolor"
                    android:inputType="textPassword"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="78dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="26dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#ed6c59"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="62sp"
                    android:text="새 비밀번호 :"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left|center"/>

                <EditText
                    android:id="@+id/NpwdEt"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/txtcolor"
                    android:inputType="textPassword"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ChangePwdLl"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/a2"
                android:elevation="10dp" >


                <TextView
                    android:id="@+id/ChangePwdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="62sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="41dp"
                    android:text="비밀번호 변경"/>

            </LinearLayout>




        </FrameLayout>

    </LinearLayout>

</FrameLayout>
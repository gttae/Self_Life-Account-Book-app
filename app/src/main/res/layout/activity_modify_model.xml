<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="760dp"
        android:orientation="vertical"
        >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Base">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/mypageBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="#ffffff"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천모델"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="60sp"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    
    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="68dp"
        android:background="#980E0E">

    </LinearLayout>

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="#000000"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="56sp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="48dp"
        tools:text="2023년 5월 내역을 분석하여"/>

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="#000000"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="56sp"
        android:layout_marginLeft="37dp"
        tools:text="최적의 계획을 구성해봤습니다."/>
    
    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="187dp"
        android:background="@drawable/rec"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            tools:text="저금 ￦100,000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="170dp"
            tools:text="쇼핑 ￦60,000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:layout_marginTop="79dp"
            android:layout_marginLeft="20dp"
            tools:text="담배 ￦140,000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:layout_marginTop="79dp"
            android:layout_marginLeft="170dp"
            tools:text="취미 ￦125,000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="20dp"
            tools:text="외식 ￦175,000"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:elevation="6dp"
        android:layout_gravity="center">
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/rec"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="62sp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:text="추천확인"></Button>

    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plubottonback" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_gravity="bottom">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_bottom_navigation"
            app:itemIconTint="#000000"
            app:itemTextColor="#000000"
            app:itemIconSize="26dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu">


        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plusbotton" />
    <FrameLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plusbottnreal" >
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/baseline_add_24_1"
            android:layout_marginBottom="7dp" >
        </FrameLayout>

    </FrameLayout>
</FrameLayout>
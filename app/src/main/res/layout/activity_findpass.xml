<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="760dp"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Base">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="24dp"
            android:text="비밀번호 찾기"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="183dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1Tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="9sp"
            android:text="회원가입 시 등록한 정보로\n비밀번호를 확인 할 수 있습니다."
            android:textAlignment="gravity"
            android:textColor="#191919"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/eT2Et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/txtcolor"
            android:hint="이름을 입력해주세요."
            android:textSize="15sp"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="#181818" />

        <EditText
            android:id="@+id/eT3Et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/txtcolor"
            android:hint="아이디를 입력해주세요."
            android:textSize="15sp"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="#181818" />

        <EditText
            android:id="@+id/eT4Et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/txtcolor"
            android:hint="생년월일을 입력해주세요."
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="#181818" />

        <EditText
            android:id="@+id/eT5Et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/txtcolor"
            android:hint="휴대폰 번호를 입력해주세요.(-제외)"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="#181818" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btncolor"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="비밀번호 찾기"
            android:textColor="#f8f8fa"
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>
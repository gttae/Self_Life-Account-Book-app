    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCommentMoidfy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정하기" />
    <Button
        android:id="@+id/btnCommentReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신고하기" />
    <Button
        android:id="@+id/btnCommentDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="삭제하기" />
</LinearLayout>

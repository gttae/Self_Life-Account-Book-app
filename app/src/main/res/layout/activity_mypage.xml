<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="760dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Base">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Person Image -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="#ffffff"
                android:src="@drawable/person" />

            <!-- Chart Text -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="60sp"
                android:text="마이페이지"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout

        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"

        android:padding="10dp">


        <ImageView
            android:id="@+id/button18"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="62sp"
            android:text=""/>

        <TextView
            android:id="@+id/logoutTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#afafb5"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="60sp"
            android:text="로그아웃"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_round_scarch_border"
        android:orientation="vertical"
        android:outlineProvider="none"
        android:padding="5dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineProvider="none"
            android:padding="5dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/mypageid"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="right"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="ID  :"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mypageids"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="left"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="  1906053"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineProvider="none"
            android:padding="5dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/mypagejoin"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="right"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="가입날짜  :"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mypagejoins"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="left"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="  2019-03-04"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineProvider="none"
            android:padding="5dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/mypageemail"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="right"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="Email  :"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mypageemails"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="left"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="14sp"
                android:text="  1906053@du.ac.kr"
                android:textColor="#ed6c59"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_margin="49dp"
        android:background="@drawable/button_round_scarch_border"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineProvider="none"
        >


        <Button
            android:id="@+id/question"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="문의하기"
            android:textSize="20sp"
            android:textColor="#ed6c59"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>
        <Button
            android:id="@+id/conditions"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="앱 이용약관"
            android:textSize="20sp"
            android:textColor="#ed6c59"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>
        <Button
            android:id="@+id/information"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="앱 정보"
            android:textSize="20sp"
            android:textColor="#ed6c59"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>
        <Button
            android:id="@+id/fix"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="회원정보 수정하기"
            android:textSize="20sp"
            android:textColor="#ed6c59"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>
        <Button
            android:id="@+id/out"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="회원탈퇴"
            android:textSize="20sp"
            android:textColor="#ed6c59"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
    <LinearLayout
        android:id="@+id/backFl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/deleteIdLayout"
        android:layout_width="360dp"
        android:layout_height="216dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/eotrmf"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:textSize="24dp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="56sp"
            android:text="탈퇴하시겠습니까?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="64sp"
            android:text="탈퇴를 하시면 지금까지의 정보가 모두 삭제됩니다."/>
        <LinearLayout
            android:id="@+id/deleteId"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btnrectangle"
            android:elevation="6dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="62sp"
                android:text="회원탈퇴"/>
        </LinearLayout>




    </LinearLayout>



    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plubottonback" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_gravity="bottom">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_bottom_navigation"
            app:itemIconTint="#000000"
            app:itemTextColor="#000000"
            app:itemIconSize="26dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plusbotton" />
    <FrameLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plubottonback" >
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/baseline_add_24_1"
            android:layout_marginBottom="7dp" >
        </FrameLayout>

    </FrameLayout>
</FrameLayout>